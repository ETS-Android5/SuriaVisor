<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CardView_View"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:id="@+id/rl_item_tree_element"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageButton_image"
            android:textSize="15sp"
            android:padding="5dp"
            android:background="@drawable/ic_location_city_white_36dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_nameTreeElement"
            android:layout_toRightOf="@+id/ImageButton_image"
            android:layout_toLeftOf="@+id/ImageButton_playCamera"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:text="Camara 12"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageButton_playCamera"
            android:layout_toLeftOf="@+id/button_addToView"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_videocam_white_36dp"/>

        <ImageButton
            android:layout_width="30dip"
            android:layout_height="28dip"
            android:id="@+id/button_addToView"
            android:background="@drawable/ic_add_to_queue_white_36dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
